<h3>Virtual Printer</h3>
<form class="form-horizontal">
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.virtual_printer.enabled"> {{ _('Enable the virtual printer') }}
                <span class="help-block">{{ _('If enabled, an additional serial port <code>VIRTUAL</code> will be available for connecting, backed by a fake printer implementation. Useful for development.') }}</span>
            </label>
        </div>
    </div>
    <hr>
    <div class="tabbable" data-bind="visible: settingsViewModel.settings.plugins.virtual_printer.enabled" style="padding-top: 10px">
        <ul class="nav nav-pills">
            <li class="active"><a href="#tabPhysical" data-toggle="tab">Physical</a></li>
            <li><a href="#tabFirmware" data-toggle="tab">Firmware</a></li>
            <li><a href="#tabResponses" data-toggle="tab">Responses</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tabPhysical">
                {% include 'settings_tab_physical.jinja2' %}
            </div>
            <div class="tab-pane" id="tabFirmware">
                {% include 'settings_tab_firmware.jinja2' %}
            </div>
            <div class="tab-pane" id="tabResponses">
                {% include 'settings_tab_responses.jinja2' %}
            </div>
        </div>
    </div>
</form>

<div>
    <hr>
    <p>
        Virtual Printer Settings by <a href="https:github.com/cp2004">Charlie Powell</a> | <i class="fa fa-tag text-success"></i> Version
        {{ plugin_virtual_printerconfig_version }} - <a href="https://github.com/cp2004/OctoPrint-VirtualPrinterSettings/releases" target="_blank">Release Notes</a>
    </p>
</div>
